
{
  "manifest_version": 2,

  "name": "Click to execute",
  "description": "Execute script after click in popup.html (chrome extension) http://stackoverflow.com/questions/20764517/execute-script-after-click-in-popup-html-chrome-extension.",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "notifications",
    "tabs", 
    "alarms",
    "http://www.netflix.com/*", 
    "<all_urls>"
  ],

  "content_scripts":[
    {
    "matches": ["http://www.netflix.com/*"],
    "js": ["jquery-2.1.4.min.js", "popup.js"]
  }
  ],

  "background": {
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png"
  }
}