
{
  "manifest_version": 2,

  "name": "Click to execute",
  "description": "Social media monitor",
  "version": "1.0",

  "icons": {
    "48": "icon.png"
  },

  "permissions": [
    "notifications",
    "tabs", 
    "alarms",
    "http://www.netflix.com/*"
  ],

  "content_scripts":[
    {
    "matches": ["http://www.netflix.com/*"],
    "js": ["jquery-2.1.4.min.js", "popup.js"]
  }
  ],

  "background": {
    "matches": ["http://www.netflix.com/*"],
    "scripts": ["background.js"]
  },
  
  "browser_action": {
    "default_icon": "icon.png"
  }
}